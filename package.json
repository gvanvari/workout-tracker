{
  "name": "workout-tracker",
  "version": "1.0.0",
  "description": "A lightweight, local-first workout tracking application",
  "private": true,
  "scripts": {
    "dev": "npm install && npm -C backend install && npm -C frontend install && npx concurrently \"npm -C backend run dev\" \"npm -C frontend run dev\"",
    "build": "npm -C backend run build && npm -C frontend run build",
    "start": "npm -C backend start"
  },
  "keywords": [
    "workout",
    "tracker",
    "fitness",
    "exercise",
    "logging"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "rules": {
      "@typescript-eslint/explicit-function-return-types": "error",
      "no-unused-vars": "error"
    }
  },
  "lint-staged": {
    "frontend/src/**/*.ts": [
      "npx eslint --config frontend/eslint.config.js --fix"
    ],
    "backend/src/**/*.ts": [
      "npx eslint --config backend/eslint.config.js --fix"
    ]
  }
}
